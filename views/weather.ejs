<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="script" href="/script.js">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300..700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>US Weather Checker</h1>
    
        <!-- User greeting area -->
        <div class="greetings">
            <p>Welcome, <span id="username"></span></p>
        </div>
        

     </div>
     <div class="weather-info">
        <input type="text" id="city" placeholder="Enter City">
        <input type="text" id="state" placeholder="Enter State">
        <button id="getWeather">Submit</button>
     </div>
     <div id="weather"></div>
    </div>


    <script src="/script.js"></script>
    <script>
        // Use the username from the server-side session (passed via script tag or inline JS)
        const username = '<%= username %>'; // This value should be passed from the server-side rendering

        // Set the username on the page
        if (username) {
            document.getElementById('username').innerText = username;
        } else {
            document.getElementById('username').innerText = 'Guest';
        }
    </script>
</body>
</html>
